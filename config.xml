<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ihackfx.MangaReader" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ReMangaReader</name>
    <description>
        iHackFX remanga reader
    </description>
    <author href="https://ihackfx.github.io/">
        iHackFX (Alexandr Kacheryants)
    </author>
    <icon src="/src/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay"/>
    <platform name="android">
        <preference name="StatusBarOverlaysWebView" value="false" />
        <access origin="*" />
        <allow-navigation href="*"/>
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="market:*" />

        <!-- Icon -->
        <icon src="/src/icon.png" density="ldpi" />
        <icon src="/src/icon.png" density="mdpi" />
        <icon src="/src/icon.png" density="hdpi" />
        <icon src="/src/icon.png" density="xhdpi" />

        <!-- Splash screen -->
        <splash src="/src/splash.png" density="land-hdpi"/>
        <splash src="/src/splash.png" density="land-ldpi"/>
        <splash src="/src/splash.png" density="land-mdpi"/>
        <splash src="/src/splash.png" density="land-xhdpi"/>
        <splash src="/src/splash.png" density="port-hdpi"/>
        <splash src="/src/splash.png" density="port-ldpi"/>
        <splash src="/src/splash.png" density="port-mdpi"/>
        <splash src="/src/splash.png" density="port-xhdpi"/>
        <preference name="SplashScreenDelay" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
    </platform>
</widget>
